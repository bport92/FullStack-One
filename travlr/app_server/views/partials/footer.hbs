<script>
    // Get the current page's path from the URL
    var curURL = window.location.pathname;

    // Get all elements of nav list
    var footLinks = document.querySelectorAll('#footer ul li a');

    // check each link against href, add to classlist if found, remove it not. 
    footLinks.forEach(link => {
        if (link.getAttribute('href') === curURL) {
            link.parentElement.classList.add('active');
        } else {
            link.parentElement.classList.remove('active');
        }
    });
</script>